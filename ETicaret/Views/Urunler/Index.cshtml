@model IEnumerable<ETicaret.Models.Urunler>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h2 style="color:darkred">Ürün Yönetimi</h2>
</div>

<p>
    <a href="/Urunler/Create" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus"></span> <b>Yeni</b>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrunAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunAciklamasi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrunFiyati)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Kategoriler.KategoriAdi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.UrunAdi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UrunAciklamasi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UrunFiyati)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Kategoriler.KategoriAdi)
    </td>
    <td>
        <a href="/Urunler/Edit/@item.UrunId" class="btn btn-warning btn-xs" title="Düzenle">
            <span class="glyphicon glyphicon-edit"></span>
        </a>
        <a href="/Urunler/Details/@item.UrunId" class="btn btn-info btn-xs" title="Detay">
            <span class="glyphicon glyphicon-search"></span>
        </a>
        <a href="/Urunler/Delete/@item.UrunId" class="btn btn-danger btn-xs" title="Sil">
            <span class="glyphicon glyphicon-trash"></span>
        </a>
    </td>
</tr>
}

</table>
